{% extends 'layout.html.twig' %}
{% block title %} {{ "A propos"|trans }} - Gracam {% endblock %}
{% block about %}actif{% endblock %}
{% block body %}

<div class="container-fluid">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <a href="{{ asset('images/produits1.jpg') }}">
                    <img src="{{ asset('images/produits1.jpg') }}" class="img-fluid rounded-4 bi bi-zoom-in"
                         alt="produits1">
                </a>
                <div class="row mt-3">
                    <div class="col-md-4">
                        <a href="{{ asset('images/produits1.jpg') }}" data-toggle="lightbox" data-gallery="gallery">
                            <img src="{{ asset('images/produits1.jpg') }}" class="img-fluid rounded-3" alt="produits1">
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ asset('images/produits1.jpg') }}" data-toggle="lightbox" data-gallery="gallery">
                            <img src="{{ asset('images/produits1.jpg') }}" class="img-fluid rounded-3" alt="produits1">
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ asset('images/produits1.jpg') }}" data-toggle="lightbox" data-gallery="gallery">
                            <img src="{{ asset('images/produits1.jpg') }}" class="img-fluid rounded-3" alt="produits1">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 shadow rounded-3 p-3">
                <div class="row">
                    <h2 class="text-title">Description</h2>
                </div>
                <div class="row">
                    <h4 class="header-title">Caractéristiques</h4>
                    <ul>
                        <li><span class="fw-bold">Granulométrie:</span> de 0 à 4 mm</li>
                        <li><span class="fw-bold">Couleur:</span> Gris - bleu dominant avec nuances en fonction du
                            site
                            de production
                        </li>
                        <li><span class="fw-bold">Forme:</span> Concassé</li>
                        <li><span class="fw-bold">Origine:</span> Nos carrières de roche massive</li>
                    </ul>
                </div>
                <div class="row">
                    <h4 class="header-title">Usages</h4>
                    <ul>
                        <li><span class="fw-bold">Assainissement et réseau:</span> Enrobage de canalisations, gaines
                            techniques.
                        </li>
                        <li><span class="fw-bold">Allée et voie d’accès:</span> Couche de finition pour vos allées
                            de jardin.
                        </li>
                        <li><span class="fw-bold">Jardin et décoration:</span> Pose de pavage, terrain de pétanque.
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <h4 class="header-title">Conditionnement : </h4>
                    <ul>
                        <li> Sable vendu en vrac et Big Bag.</li>
                        <li>Prix/ : 4192 FCFA /Tonne</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 shadow rounded-3">
                <form name="calculateur" method="post" id="form" enctype="multipart/form-data">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="mt-4 col-lg-4">
                                <div class="form-floating">
                                    <input type="number" id="longueur" required="required"
                                           maxlength="255" placeholder="Longueur (en m)"
                                           class="form-control"/>
                                    <label for="longueur" class="required">Longueur (en m)</label>
                                </div>
                            </div>
                            <div class="mt-4 col-lg-4">
                                <div class="form-floating">
                                    <input type="number" id="largeur" required="required" class="form-control"/>
                                    <label for="largeur" class="required">Largeur (en m)</label>
                                </div>
                            </div>
                            <div class="mt-4 col-lg-4">
                                <div class="form-floating">
                                    <input type="number" id="epaisseur" required="required" placeholder="epaisseur" class="form-control"/>
                                    <label for="epaisseur" class="required">Epaisseur (en cm)</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="mt-4 col-lg-6">
                                <div class="form-floating">
                                    <input type="number" id="tonnage" required="required" placeholder="tonnage" class="form-control" disabled/>
                                    <label for="tonnage" class="required">Tonnage (en t)</label>
                                </div>
                            </div>
                            <div class="mt-4 col-lg-6">
                                <div class="form-floating">
                                    <input type="number" id="volume" required="required" placeholder="Volume" class="form-control" disabled/>
                                    <label for="volume" class="required">Volume (en m3)</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" mt-4 mb-4">
                        <button class="btn btn-primaire p-3 w-100" type="submit">
                            <strong>{{ 'Calculer'|trans }}</strong>
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 shadow rounded-3">
                <div class="col-lg-12 mt-5">
                    <div class="row">
                        <div class="mt-4 col-lg-6">
                            <div class="form-floating">
                                <button class="btn btn-primaire p-3 w-100"
                                        type="submit"><strong>{{ 'Demander un devis'|trans }}</strong>
                                </button>
                            </div>
                        </div>
                        <div class="mt-4 col-lg-6">
                            <div class="form-floating">
                                <input type="number" id="total" required="required" placeholder="Total" class="form-control" disabled/>
                                <label for="total" class="required">Total :</label>
                            </div>
                        </div>
                        <div class="mt-4 col-lg-12">
                            <div class="form-floating">
                                <button class="btn btn-primaire btn-effect p-3 w-100"
                                        type="submit" disabled><strong>{{ 'Commander'|trans }}</strong>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- item End -->
    {% endblock %}



