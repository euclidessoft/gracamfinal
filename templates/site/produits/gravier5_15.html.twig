{% extends 'layout.html.twig' %}
{% block title %} {{ "Gravier 5/15"|trans }} - Gracam {% endblock %}
{% block produits %}active{% endblock %}
{% block nav %}scrolled{% endblock %}
{% block body %}

    <div class="container-fluid">
        <div class="container pt-5">
            <div class="row g-5 mb-5 mt-5">
                <div class="col-lg-6">
                    <div class="row g-4">
                        <div class="col-12">
                            <img src="{{ asset('images/gravier_5-15_1.avif') }}" class="img-fluid" id="ProductImg"
                                 alt="gravier_5-15_1">
                        </div>
                        <div class="col-4">
                            <img src="{{ asset('images/gravier_5-15_1.avif') }}" class="img-fluid small-img"
                                 alt="gravier_5-15_1">
                        </div>
                        <div class="col-4">
                            <img src="{{ asset('images/gravier_5-15_2.avif') }}" class="img-fluid small-img"
                                 alt="gravier_5-15_2">
                        </div>
                        <div class="col-4">
                            <img src="{{ asset('images/gravier_5-15_3.avif') }}" class="img-fluid small-img"
                                 alt="gravier_5-15_3">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card shadow border-primaire h-100">
                        <div class="card-header">
                            Information du produit
                        </div>
                        <div class="card-body px-5">
                            <h5 class="card-title">Gravier 5/15</h5>
                            <div class="produit-info">
                                <h4 class="header-title">Caractéristiques</h4>
                                <ul>
                                    <li>
                                        <span class="fw-bold">Granulométrie:</span> de 5 à 15 mm
                                    </li>
                                    <li>
                                        <span class="fw-bold">Couleur:</span>
                                        Gris - bleu dominant avec nuances en fonction du site de production
                                    </li>
                                    <li>
                                        <span class="fw-bold">Forme:</span> Concassé
                                    </li>
                                    <li>
                                        <span class="fw-bold">Origine:</span> La carrière de roche massive (Gneiss),
                                        sise à NKOLONDOM.
                                    </li>
                                </ul>
                                <h4 class="header-title">Usages</h4>
                                <ul>
                                    <li>
                                        <span class="fw-bold">Assainissement et réseau:</span> Enrobage de
                                        canalisations, gaines
                                        techniques.
                                    </li>
                                    <li>
                                        <span class="fw-bold">Allée et voie d’accès:</span> Couche de finition pour vos
                                        allées
                                        de jardin.
                                    </li>
                                    <li>
                                        <span class="fw-bold">Jardin et décoration:</span> Pose de pavage, terrain de
                                        pétanque.
                                    </li>
                                </ul>
                                <h4 class="header-title">Conditionnement</h4>
                                <ul>
                                    <li class="mb-2"> Gravier vendu en vrac et Big Bag.</li>
                                    <li> <span class="fw-bold">Prix HT :</span> 6708 FCFA /Tonne</li>
                                    <li> <span class="fw-bold">Prix TTC :</span> 8200 FCFA /Tonne</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">

                </div>
                <div class="col-lg-6">
                    <input type="hidden" id="prixHt" value="6708" />
                    <input type="hidden" id="prixTTC" value="8000" />
                    {{ include('site/calculateurGravier.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <!-- item End -->
    {% block scroll %} {% endblock %}
{% endblock %}



